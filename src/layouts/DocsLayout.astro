---
import BaseHead from '../components/BaseHead.astro';
import SiteNav from '../components/SiteNav.astro';
import Footer from '../components/Footer.astro';
import DocsSidebar from '../components/DocsSidebar.astro';
import TableOfContents from '../components/TableOfContents.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import '../styles/global.css';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
  headings: Array<{ depth: number; slug: string; text: string }>;
}

const { frontmatter, headings } = Astro.props;

// Build breadcrumb from URL path
const currentPath = Astro.url.pathname;
const pathParts = currentPath.split('/').filter(Boolean);
const breadcrumbItems = [
  { label: '문서', href: '/docs/guide/what-is-ime' },
];

// Map category names
const categoryNames: Record<string, string> = {
  guide: '가이드',
  korean: '한글',
  japanese: '일본어',
  chinese: '중국어',
  arabic: '아랍어',
  european: '유럽권',
  reference: '참고',
  editor: '에디터',
};

if (pathParts.length >= 2) {
  const category = pathParts[1];
  if (categoryNames[category]) {
    breadcrumbItems.push({ label: categoryNames[category] });
  }
}
---

<!doctype html>
<html lang="ko">
  <head>
    <BaseHead title={frontmatter.title} description={frontmatter.description} />
  </head>
  <body>
    <SiteNav />
    <div class="docs-wrapper">
      <main class="docs-container">
        <DocsSidebar />
        <section class="docs-main">
          <article class="docs-article">
            <Breadcrumb items={breadcrumbItems} />
            <header class="docs-header">
              <h1>{frontmatter.title}</h1>
              {frontmatter.description && (
                <p class="docs-description">{frontmatter.description}</p>
              )}
            </header>
            <div class="docs-content markdown-content">
              <slot />
            </div>
          </article>
          <TableOfContents headings={headings} />
        </section>
      </main>
    </div>
    <Footer />
  </body>
</html>

<style>
  .docs-wrapper {
    display: flex;
    justify-content: center;
    min-height: calc(100vh - var(--nav-height));
    background: var(--bg-page);
  }

  .docs-container {
    display: flex;
    width: 100%;
    max-width: var(--docs-max-width);
    margin: 0;
    padding: 0;
  }

  .docs-main {
    flex: 1;
    display: flex;
    padding: 2.5rem 3rem 4rem;
    gap: 2.5rem;
    min-width: 0;
  }

  .docs-article {
    flex: 1;
    min-width: 0;
    max-width: var(--content-max-width);
  }

  .docs-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid var(--border-light);
  }

  .docs-header h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .docs-description {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .docs-content {
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  @media (max-width: 1280px) {
    .docs-main {
      padding: 2rem 2rem 3rem;
      gap: 2rem;
    }
  }

  @media (max-width: 1024px) {
    .docs-main {
      padding: 1.5rem 1.5rem 3rem;
    }

    .docs-header h1 {
      font-size: 1.625rem;
    }
  }

  @media (max-width: 768px) {
    .docs-main {
      padding: 1rem;
      flex-direction: column;
    }
  }
</style>
